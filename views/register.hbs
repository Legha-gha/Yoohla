<div class="row reg">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Register</h4>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="row">
                    <div class="col-md-5 grid-margin stretch-card">
                        <div class="btn btn-icon-text btn-google">Regggattton</div>
                    </div>

                    <div class="col-md-7 grid-margin stretch-card">
                        <form action=" ">

                            <div class="row" style="justify-content: center;">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name=" " id=" "
                                                placeholder="First Name" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name=" " id=" "
                                                placeholder="Last Name">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <input type="email" class="form-control" name=" " id=" " placeholder="Email"
                                        required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" class="form-control" name=" " id=" "
                                                placeholder="Password" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" class="form-control" name=" " id=" "
                                                placeholder="Confirm Password" required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <input type="tel" class="form-control" name="" id="" placeholder="Telephone">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i
                                                class="mdi mdi-arrow-down-drop-circle-outline"></i> 237</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <input type="search" class="form-control" name="" id="" placeholder="Address">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="padding: 0 .3rem;">
                                <div class="form-check form-check-dark">
                                    <label class="form-check-label">
                                        <h6 style="font-size: small;">
                                        <input type="checkbox" class="form-check-input"> <i
                                            class="input-helper"></i></label>
                                            By clicking this you accept to our <a
                                                href="#">Terms of Service</a>
                                            blah blah blah </h6> 
                                </div>

                                <div class="form-group">
                                    <button type="button" class="btn btn-inverse-info">Register</button>
                                </div>

                                <hr>

                                <div class="form-group">
                                    <div class="btn btn-icon-text btn-google">Register with Google</div>
                                </div>
                                <div class="form-group">
                                    <div class="btn btn-icon-text btn-facebook">Register with Facebook</div>
                                </div>

                                <hr>

                                <div class="">
                                    <span>Have an account?<a href="#">Log in</a></span>
                                </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>